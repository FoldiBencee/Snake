<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/hatter"
    android:gravity="center_horizontal"
    tools:context=".Main3Activity">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idedittxtfelhnev"

        android:hint="felhasználónév"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idedittxtjelszo"
        android:inputType="textPassword"
        android:hint="jelszó"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idedittxtjelszoismet"

        android:hint="jelszó ismét"
        />



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idedittxtemail"
        android:inputType="textEmailAddress"
        android:hint="email"
        />


    <Button
        android:layout_width="187dp"
        android:layout_height="59dp"
        android:id="@+id/idbttnRegisztralok"
        android:background="@drawable/regisztralokgomb"
        android:layout_marginBottom="20dp"
        />

    <Button
        android:layout_width="187dp"
        android:layout_height="59dp"
        android:id="@+id/idbttnVissza"
        android:background="@drawable/visszagomb"

        />



    //regisztaciosfelulet

</LinearLayout>